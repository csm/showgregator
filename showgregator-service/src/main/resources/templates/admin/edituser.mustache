<html>
<head>
    <title>Edit user {{id}}</title>
</head>
<body>
    <h1>Editing user {{id}}</h1>
    {{{ did_edit }}}
    <div>
        <form method="POST" action="/admin/edituser/{{id}}">
            <label for="email">Change email</label> <input type="email" id="email" name="email" value="{{ email }}">
            <button type="submit">Change Email</button>
        </form>
    </div>
    <div>
        <form method="POST" action="/admin/edituser/{{id}}">
            <label for="handle">Change handle</label> <input type="text" id="handle" name="handle" value="{{ handle }}">
            <button type="submit">Change Handle</button>
        </form>
    </div>
    <div>
        <form method="POST" action="/admin/edituser/{{id}}">
            <label for="password">Change password</label> <input type="password" id="password" name="password">
            <button type="submit">Change Password</button>
        </form>
    </div>
</body>
</html>